{
    "name": "lepre/di",
    "description": "A simple Dependency Injection Container, PSR-11 compliant.",
    "keywords": [
        "container",
        "dependency injection",
        "dependency injection container",
        "di",
        "di container",
        "dic",
        "psr-11"
    ],
    "homepage": "https://github.com/leprephp/di",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniele De Nobili",
            "email": "danieledenobili@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/leprephp/di",
        "issues": "https://github.com/leprephp/di/issues"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "php-coveralls/php-coveralls": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "Lepre\\DI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lepre\\DI\\Tests\\": "tests/"
        }
    },
    "provide": {
        "psr/container-implementation": "1.0"
    },
    "scripts": {
        "test": [
            "phpunit"
        ]
    }
}
